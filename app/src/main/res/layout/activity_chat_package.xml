<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">


    <include layout="@layout/chat_title"/>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/msg_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/message_sound"
            android:layout_width="53dp"
            android:layout_height="match_parent"
            android:src="@drawable/ic_voice"
            android:background="@drawable/voice_background"
            android:layout_margin="5dp"
            android:layout_gravity="center"/>
        
        <com.example.lab.android.nuc.chat.Base.others.AudioRecorderButton
            android:id="@+id/id_recorder_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="60dp"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="7dp"
            android:padding="5dp"/>
        <!--<EditText-->
            <!--android:id="@+id/chat_edit_Text"-->
            <!--android:layout_width="0dp"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_weight="1"-->
            <!--android:maxLines="2" />-->

        <Button
            android:id="@+id/msg_send"
            android:layout_width="55dp"
            android:layout_height="40dp"
            android:text="@string/message_send"
            android:background="@drawable/shape_1"/>
        

    </LinearLayout>


</LinearLayout>